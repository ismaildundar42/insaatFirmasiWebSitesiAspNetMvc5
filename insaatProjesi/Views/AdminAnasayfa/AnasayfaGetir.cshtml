    <div class="mb-3">
        @Html.Label("Yorumcu 3 Yorum", htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Yorumcu3Yorum, new { @class = "form-control", placeholder = "\"Yorumcu 3 Yorum", rows = "6", style = "font-size: 18px; padding: 10px;" })
    </div>


    <button type="submit" class="btn btn-success">Güncelle</button>
</form>


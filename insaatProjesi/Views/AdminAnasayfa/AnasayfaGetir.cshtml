    <div class="mb-3">
        @Html.Label("Açıklama 3", htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Aciklama3, new { @class = "form-control", placeholder = "Açıklama 3", rows = "6", style = "font-size: 18px; padding: 10px;" })
    </div>

    <div class="mb-3">
        @Html.Label("Video Linki", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.VideoLink, new { @class = "form-control", placeholder = "Video Linki" })
    </div>

    <div class="mb-3">
        @Html.Label("Yorumcu 1 Ad", htmlAttributes: new { @class = "form-label" })

    <div class="mb-3">
        @Html.Label("Yorumcu 1 Yorum", htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Yorumcu1Yorum, new { @class = "form-control", placeholder = "\"Yorumcu 1 Yorum", rows = "6", style = "font-size: 18px; padding: 10px;" })
    </div>


    <div class="mb-3">
        @Html.Label("Yorumcu 2 Ad", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Yorumcu2Ad, new { @class = "form-control", placeholder = "Yorumcu 1 Ad" })
    </div>

    <div class="mb-3">
        @Html.Label("Yorumcu 2 Meslek", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Yorumcu2Meslek, new { @class = "form-control", placeholder = "Yorumcu 2 Meslek" })
    </div>

    <div class="mb-3">
        @Html.Label("Yorumcu 2 Yorum", htmlAttributes: new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Yorumcu2Yorum, new { @class = "form-control", placeholder = "\"Yorumcu 2 Yorum", rows = "6", style = "font-size: 18px; padding: 10px;" })
    </div>

    <div class="mb-3">
        @Html.Label("Yorumcu 3 Ad", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Yorumcu3Ad, new { @class = "form-control", placeholder = "Yorumcu 3 Ad" })
    </div>

    <div class="mb-3">
        @Html.Label("Yorumcu 3 Meslek", htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Yorumcu3Meslek, new { @class = "form-control", placeholder = "Yorumcu 3 Meslek" })

@using insaatProjesi.Models.Entitiy
@model List<tbl_calisanlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<div class="team">
    <div class="container">
        <div class="section-header text-center">
            <p>Çalışma Arkadaşlarımız</p>
            <h2>Mühendis ve Mimarlarımızla İletişime Geçebilirsiniz</h2>
        </div>

        <!-- Üst Kısım: İlk 4 Kişi -->
        <div class="row">
            @foreach (var x in Model.Take(4))
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="@x.ResimUrl" alt="Team Image">
                        </div>
                        <div class="team-text">
                            <h2>@x.AdSoyad</h2>
                            <p>@x.Gorev</p>
                        </div>
                        <div class="team-social">
                            <a class="social-tw" href=""><i class="fab fa-twitter"></i></a>
                            <a class="social-fb" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="social-li" href=""><i class="fab fa-linkedin-in"></i></a>
                            <a class="social-in" href=""><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Alt Kısım: Geri Kalan Kişiler -->
        <div class="row">
            @foreach (var x in Model.Skip(4))
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="@x.ResimUrl" alt="Team Image">
                        </div>
                        <div class="team-text">
                            <h2>@x.AdSoyad</h2>
                            <p>@x.Gorev</p>
                        </div>
                        <div class="team-social">
                            <a class="social-tw" href=""><i class="fab fa-twitter"></i></a>
                            <a class="social-fb" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="social-li" href=""><i class="fab fa-linkedin-in"></i></a>
                            <a class="social-in" href=""><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

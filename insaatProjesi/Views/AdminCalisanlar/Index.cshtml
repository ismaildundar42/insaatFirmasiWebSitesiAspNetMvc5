@using insaatProjesi.Models.Entitiy
@model List<tbl_calisanlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>AD SOYAD</th>
        <th>GÖREV</th>
        <th>RESİM</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AdSoyad</td>
            <td>@x.Gorev</td>
            <td>@x.ResimUrl</td>
            <td><a href="/AdminCalisanlar/CalisanSil/@x.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/AdminCalisanlar/CalisanGetir/@x.ID" class="btn btn-primary">GÜNCELLE</a></td>
            <td></td>
        </tr>
    }

</table>

<br />
<a href="/AdminCalisanlar/CalisanEkle/" class="btn btn-success">Yeni Çalışan Bilgisi Ekleme İşlemi</a>
